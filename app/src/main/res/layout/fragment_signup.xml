<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:fillViewport="true"
    tools:context=".Fragments.SignupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/welcome_font"
            android:text="@string/signup"
            android:textColor="@color/white"
            android:textFontWeight="0"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/fnametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/white"
            android:hint="Fname"
            android:inputType="text"
            android:textColor="@color/yellow"
            android:textColorHint="@color/etxttint"
            android:textCursorDrawable="@drawable/cursor_color" />

        <EditText
            android:id="@+id/lnametxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/ic_baseline_person_outline_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/white"
            android:hint="Lname"
            android:inputType="text"
            android:textColor="@color/yellow"
            android:textColorHint="@color/etxttint"
            android:textCursorDrawable="@drawable/cursor_color" />

        <EditText
            android:id="@+id/emailtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
            android:drawablePadding="4dp"
            android:hint="Email"
            android:inputType="text"
            android:textColor="@color/yellow"
            android:textColorHint="@color/etxttint"
            android:textCursorDrawable="@drawable/cursor_color" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/codetxt"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/yellow"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:hint="+91"
                android:textSize="20sp"
                android:gravity="center"
                android:textStyle="bold"
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/etxttint"
                android:textCursorDrawable="@drawable/cursor_color" />

            <EditText
                android:id="@+id/mobtxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/yellow"
                android:drawablePadding="4dp"
                android:layout_marginStart="80dp"
                android:hint="Mobile No."
                android:inputType="number"
                android:textColor="@color/yellow"
                android:textColorHint="@color/etxttint"
                android:textCursorDrawable="@drawable/cursor_color" />

        </FrameLayout>

        <EditText
            android:id="@+id/passtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/white"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="@color/yellow"
            android:textColorHint="@color/etxttint"
            android:textCursorDrawable="@drawable/cursor_color" />

        <EditText
            android:id="@+id/cpasswdtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:drawablePadding="4dp"
            android:drawableTint="@color/white"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="@color/yellow"
            android:textColorHint="@color/etxttint"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <RadioGroup
                android:id="@+id/genderradiogrp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="Male"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="Female"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/yellow"
                    android:text="Other"
                    android:textColor="@color/white" />
            </RadioGroup>

            <CheckBox
                android:id="@+id/term_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/yellow"
                android:checked="true"
                android:text="Accept Term and Condition"
                android:textColor="@color/etxttint" />
        </LinearLayout>

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#ADF23557"
            android:text="@string/signup"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Our Member"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/loginbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:text="@string/loginbtn"
                android:textColor="#FAF23557"
                android:textFontWeight="300"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>
</ScrollView>