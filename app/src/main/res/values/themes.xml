<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TajHotel" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/backgroundBottomColor</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundBottomColor</item>
        <item name="android:autofilledHighlight">@android:color/transparent</item>
    </style>

    <style name="Theme.Avatar" parent="Theme.AppCompat.Light">
        <item name="android:autofilledHighlight">@android:color/transparent</item>
        <item name="colorPrimary">@color/backgroundBottomColor</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundBottomColor</item>
    </style>

    <style name="Theme.TajHotel.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TajHotel.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TajHotel.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>